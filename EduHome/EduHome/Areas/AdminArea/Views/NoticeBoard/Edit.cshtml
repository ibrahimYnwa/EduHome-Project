@model NoticeBoardVM
@{
    ViewData["Title"] = "Edit";
}

<div class="container mt-5">
    
    <form class="forms-sample" method="post" asp-action="Edit">
        <div class="form-group">
            <label asp-for="Message"></label>
            <input class="form-control"  asp-for="Message" value="@Model.Message">
            <span class="text-danger" asp-validation-for="Message"></span>
        </div>
        <div class="form-group">
            <label asp-for="Date">Date</label>
            <input class="form-control"  asp-for="Date" value="@Model.Date">
            <span class="text-danger" asp-validation-for="Date"></span>
        </div>
        <button type="submit" class="btn btn-primary me-2">Submit</button>
        <a asp-action="Index" class="btn btn-light">Cancel</a>
    </form>
</div>

