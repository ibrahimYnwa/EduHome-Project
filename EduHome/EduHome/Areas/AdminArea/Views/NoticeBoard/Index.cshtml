@model List<NoticeBoard>


@{
    ViewData["Title"] = "Index";
    int count = 1;
}

<div class="container">
    <div class="row">
        <div class="header d-flex justify-content-between mt-3">
            <h3>Notice Board</h3>
            <div>
                <a class="btn btn-success" asp-action="Create">Create</a>
            </div>
        </div>

        <div class="table-responsive">
            <table class="table table-striped">
                <thead>
                    <tr>
                        <th>
                            Number
                        </th>
                        <th>
                            Date
                        </th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var nbitem in Model)
                    {
                    <tr>
                        <td>
                            @count
                        </td>
                        <td>
                            @nbitem.Date?.ToString("dd,MMMM yyyy")
                        </td>
                        <td>
                            <a class="btn btn-primary btn-sm" asp-action="Detail" asp-route-id="@nbitem.Id">
                                <i class="mdi mdi-account-box-outline"></i>
                            </a>
                            <a class="btn btn-warning btn-sm" asp-action="Edit" asp-route-id="@nbitem.Id">
                                <i class="mdi mdi-table-edit"></i>
                            </a>
                            <form style="display:inline-block" method="post" asp-action="Delete" asp-route-id="@nbitem.Id">
                                <button class="btn btn-danger btn-sm" type="submit">
                                    <i class="mdi mdi-delete-forever"></i>
                                </button>
                            </form>

                        </td>
                    </tr>
                        count++;
                    }

                </tbody>
            </table>
        </div>
    </div>

</div>

