@model NoticeBoardVM
@{
    ViewData["Title"] = "Create";
}

<div class="container mt-5">
    <form class="forms-sample" method="post" asp-action="Create" enctype="multipart/form-data">
        <div class="form-group">
            <label asp-for="Message">Message</label>
            <input class="form-control" asp-for="Message">
            <span class="text-danger" asp-validation-for="Message"></span>
        </div>
        <div class="form-group">
            <label asp-for="Date"></label>
            <input class="form-control"  asp-for="Date">
            <span class="text-danger" asp-validation-for="Date"></span>
        </div>
        <button type="submit" class="btn btn-primary me-2">Submit</button>
        <a asp-action="Index" class="btn btn-light">Cancel</a>
    </form>
</div>


